@model TeachMeEntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "Login";
}
<div class="bg-light">
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="card p-4 text-secondary bg-secondary mb-5">
            <div class="card-header text-center">
                <h3>Iniciar sesión </h3>
            </div>
            <div class="card-body w-100">
                <form asp-action="Login">
                    <input type="hidden" name="pReturnUrl" value="@ViewBag.Url" />
                    <div class="input-group form-group mt-3">
                        <input type="text" asp-for="Login" class="form-control"  placeholder="Usuario"
                               name="Login">
                    </div>
                    <div class="input-group form-group mt-3">

                        <input type="password" as asp-for="Password" class="form-control" placeholder="Contraseña"
                               name="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Acceder"
                               class="btn bg-primary float-end text-white w-100"
                               name="login-btn">
                        <span class="text-danger">@ViewBag.Error</span>
                    </div>
                </form>

            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center">
                    <div class="text-primary">¿Posees una cuenta? Registrate aquí.</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

