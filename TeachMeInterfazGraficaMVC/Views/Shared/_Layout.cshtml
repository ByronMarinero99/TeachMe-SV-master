<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeachMe-Admin</title>

    <!-- Hoja de estilo de boostrap personalizada -->
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Hoja de estilo personalizada para letras -->
    <link rel="stylesheet" href="./animaciones.css" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="./lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- LIBRERIAS DE JAVASCRIPT -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!--    Iconos de bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Administrador"))
        {
            <header>
                <div class="container-fluid">
                    <div class="row border-top px-xl-5">
                        <div class="col-lg-3 d-none d-lg-block">
                            <a class="d-flex align-items-center justify-content-between bg-secondary w-100 text-decoration-none" data-toggle="collapse" href="#navbar-vertical" style="height: 67px; padding: 0 30px;">
                                <h5 class="text-primary m-0"><i class="fa fa-book-open mr-2"></i>TeachMe SV</h5>
                                <i class="fa fa-angle-down text-primary"></i>
                            </a>
                            <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 9;">
                                <div class="navbar-nav w-100">

                                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                    <a class="nav-link" asp-area="" asp-area="" asp-controller="Rol" asp-action="Index">Roles</a>
                                    <a class="nav-link" asp-area="" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                                    <a class="nav-link" asp-area="" asp-area="" asp-controller="Categoria" asp-action="Index">Categorias</a>
                                    <a class="nav-link" asp-area="" asp-controller="Curso" asp-action="Index">Cursos</a>
                                    <a class="nav-link" asp-area="" asp-area="" asp-controller="Libros" asp-action="Index">Libros</a>
                                </div>
                            </nav>
                        </div>
                        <div class="col-lg-9">
                            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                                <a href="" class="text-decoration-none d-block d-lg-none">
                                    <h1 class="m-0"><span class="text-primary">T</span>eachMe</h1>
                                </a>
                                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                                    <div class="navbar-nav py-0">
                                        <a class="nav-link" asp-area="" asp-area="" asp-controller="Categoria" asp-action="Index">
                                            <i class="bi bi-camera-reels-fill"> Categorias</i>
                                        </a>

                                        <a class="nav-link" asp-area="" asp-area="" asp-controller="Curso" asp-action="Index">
                                            <i class="bi bi-camera-reels-fill"> Cursos </i>
                                        </a>
                                        <a class="nav-link" asp-area="" asp-area="" asp-controller="Libros" asp-action="Index">
                                            <i class="bi bi-book-half"> Libros </i>
                                        </a>
                                        <a class="nav-link" asp-area="" asp-controller="Blogs" asp-action="Index">
                                            <i class="bi bi-pencil-square"> Blogs </i>
                                        </a>
                                        <div class="nav-item dropdown">
                                            <a href="#" class="nav-link active dropdown-toggle" data-toggle="dropdown"> Administracion</a>
                                            <div class="dropdown-menu rounded-0 m-0">
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="Rol" asp-action="Index">
                                                    <i class="bi bi-people-fill"> Roles </i>
                                                </a>
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="Usuario" asp-action="Index">
                                                    <i class="bi bi-person-circle">Usuarios </i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="nav-item dropdown">
                                            <a href="#" class="nav-link active dropdown-toggle" data-toggle="dropdown">Compras</a>
                                            <div class="dropdown-menu rounded-0 m-0">
                                                <a class="dropdown-item active" asp-area="" asp-controller="Compras" asp-action="Index">
                                                    <i class="bi bi-cart4"> Cursos </i>
                                                </a>
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="CompraLibro" asp-action="Index">
                                                    <i class="bi bi-cart4"> Libros </i>
                                                </a>
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="CredencialPago" asp-action="Index">
                                                    <i class="bi bi-credit-card-2-back-fill"> Credenciales </i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <a class="btn btn-primary py-2 px-4 ml-auto d-none d-lg-block" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar Sesion <i class="bi bi-box-arrow-in-right"></i></a>
                                </div>
                            </nav>
                        </div>



                    </div>
                </div>
            </header>


        }
        if (User.IsInRole("Usuario"))
        {
            <header>
                <div class="container-fluid">
                    <div class="row border-top px-xl-5">
                        <div class="col-lg-3 d-none d-lg-block">
                            <a class="d-flex align-items-center justify-content-between bg-secondary w-100 text-decoration-none" data-toggle="collapse" href="#navbar-vertical" style="height: 67px; padding: 0 30px;">
                                <h5 class="text-primary m-0"><i class="fa fa-book-open mr-2"></i>TeachMe SV</h5>
                                <i class="fa fa-angle-down text-primary"></i>
                            </a>
                            <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 9;">
                                <div class="navbar-nav w-100">

                                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                    <a class="nav-link" asp-area="" asp-controller="CursoEstudiante" asp-action="Index">Cursos</a>
                                    <a class="nav-link" asp-area="" asp-area="" asp-controller="LibroEstudiante" asp-action="Index">Libros</a>
                                    <a class="nav-link" asp-area="" asp-area="" asp-controller="CategoriaEstudiante" asp-action="Index">Categorias</a>
                                </div>
                            </nav>
                        </div>
                        <div class="col-lg-9">
                            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                                <a href="" class="text-decoration-none d-block d-lg-none">
                                    <h1 class="m-0"><span class="text-primary">T</span>eachMe</h1>
                                </a>
                                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                                    <div class="navbar-nav py-0">
                                        <a class="nav-link" asp-area="" asp-area="" asp-controller="CategoriaEstudiante" asp-action="Index">
                                            <i class="bi bi-camera-reels-fill"></i> Categorias
                                        </a>

                                        <a class="nav-link" asp-area="" asp-area="" asp-controller="CursoEstudiante" asp-action="Index">
                                            <i class="bi bi-camera-reels-fill"></i> Cursos
                                        </a>
                                        <a class="nav-link" asp-area="" asp-area="" asp-controller="LibroEstudiante" asp-action="Index">
                                            <i class="bi bi-book-half"></i> Libros
                                        </a>
                                        <a class="nav-link" asp-area="" asp-controller="BlogsEstudiante" asp-action="Index">
                                            <i class="bi bi-pencil-square"></i> Blogs
                                        </a>
                                        <div class="nav-item dropdown">
                                            <a href="#" class="nav-link active dropdown-toggle" data-toggle="dropdown">Ver Mas</a>
                                            <div class="dropdown-menu rounded-0 m-0">
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="Rol" asp-action="Index">
                                                    <i class="bi bi-people-fill"></i> Quienes Somos
                                                </a>
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="Usuario" asp-action="Index">
                                                    <i class="bi bi-person-circle"></i>Contactanos
                                                </a>
                                            </div>
                                        </div>
                                        <div class="nav-item dropdown">
                                            <a href="#" class="nav-link active dropdown-toggle" data-toggle="dropdown">Ajustes</a>
                                            <div class="dropdown-menu rounded-0 m-0">
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="CredencialPago" asp-action="Index">
                                                    <i class="bi bi-credit-card-2-back-fill"></i> Credenciales
                                                </a>
                                                <a class="dropdown-item" asp-area="" asp-area="" asp-controller="Usuario" asp-action="CambiarPassword">
                                                    <i class="bi bi-asterisk"></i> Cambio de Contraseña
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                    <a class="btn btn-primary py-2 px-4 ml-auto d-none d-lg-block" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar Sesion <i class="bi bi-box-arrow-in-right"></i></a>
                                </div>
                            </nav>
                        </div>



                    </div>
                </div>
            </header>


        }

    }



    <div class="align-content-around">
        <main role="main" class="pb-3">
            @RenderBody()

            <!-- REGRESAR AL TOP -->
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>
        </main>
    </div>



    <!-- AQUI EMPIEZA EL FOOTER -->
    
    <!-- AQUI EMPIEZA EL FOOTER -->


